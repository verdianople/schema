{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.verdianople.com/dnd/5e/v1/stat.schema.json",
  "title": "Stat",
  "description": "One of the core primary stats used for creatures.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "enum": ["str", "dex", "con", "int", "wis", "cha"]
    },
    "score": {
      "type": "integer",
      "min": 0,
      "default": 10
    },
    "mod": {
      "description": "Modifier based on the state score, but sometimes modified additionally by other sources.",
      "$ref": "https://schema.verdianople.com/dnd/5e/v1/mod.schema.json"
    }
  }
}
